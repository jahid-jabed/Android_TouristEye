<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/mainbackground">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TouristEye Bangladesh"
        android:id="@+id/textView_appname"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#8494ff"
        android:padding="20dp"
        android:gravity="center" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Places"
        android:onClick="searchPlaces"
        android:id="@+id/button_m_sp"
        android:layout_marginTop="30dp"
        android:background="#dfdeff"
        android:layout_below="@+id/textView_appname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Popular Places"
        android:id="@+id/button_m_pPlace"
        android:layout_marginTop="5dp"
        android:onClick="popplace"
        android:layout_below="@+id/button_m_sp"
        android:layout_alignParentRight="true"
        android:background="#dfdeff" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tourist Order"
        android:layout_marginTop="5dp"
        android:onClick="order"
        android:id="@+id/button_m_tOrder"
        android:layout_below="@+id/button_m_pPlace"
        android:layout_alignParentRight="true"
        android:background="#dfdeff" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Calender"
        android:layout_marginTop="5dp"
        android:onClick="utpal"
        android:id="@+id/button_m_eCalender"
        android:layout_below="@+id/button_m_tOrder"
        android:layout_alignParentRight="true"
        android:background="#dfdeff" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Emergency Contacts"
        android:layout_marginTop="5dp"
        android:id="@+id/button_m_eContact"
        android:onClick="emergency"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_m_lLanguage"
        android:layout_alignParentRight="true"
        android:background="#dfdeff" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Feedback"
        android:layout_marginTop="5dp"
        android:id="@+id/button_m_fback"
        android:onClick="fback"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/button_m_eContact"
        android:layout_alignParentRight="true"
        android:background="#dfdeff" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Learn Language"
        android:layout_marginTop="10dp"

        android:id="@+id/button_m_lLanguage"
        android:background="#dfdeff"
        android:onClick="llanguage"
        android:layout_alignTop="@+id/button_m_eCalender"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="183dp"
        android:layout_marginEnd="183dp" />

</RelativeLayout>
