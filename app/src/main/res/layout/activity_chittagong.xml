<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.touristguidebd.Chittagong"
    android:background="#ffe77c">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cox&apos;s Bazar"
        android:id="@+id/btn_c_cox"
        android:onClick="cox"
        android:layout_below="@+id/btn_c_sajek"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sajek"
        android:id="@+id/btn_c_sajek"
        android:onClick="sajek"
        android:layout_alignParentTop="true"
        android:layout_marginTop="174dp"
        android:layout_alignRight="@+id/btn_c_cox"
        android:layout_alignEnd="@+id/btn_c_cox"
        android:layout_alignLeft="@+id/btn_c_cox"
        android:layout_alignStart="@+id/btn_c_cox" />
</RelativeLayout>
